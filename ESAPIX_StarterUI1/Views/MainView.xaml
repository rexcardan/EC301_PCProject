<ui:FluentWindow x:Class="ESAPX_StarterUI.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowStartupLocation="CenterScreen"
        WindowCornerPreference="Default"
        Title="{Binding Title, FallbackValue=ESAPIX Starter UI}"
        Height="650" Width="1000"
        Icon="/Resources/esapix.png">
    <Grid>
        <DockPanel>
            <ui:TitleBar DockPanel.Dock="Top"
                         x:Name="TitleBar"
                         Title="{Binding Title, FallbackValue=ESAPIX Starter UI}"
                         CloseWindowByDoubleClickOnIcon="True"/>

            <!-- Host for patient selector overlay, sits below the TitleBar -->
            <ContentControl x:Name="PatientSelectorHost" DockPanel.Dock="Top" />

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Constraints" Grid.Row="0" Padding="5" FontWeight="Bold" FontSize="16"/>

                <ui:DataGrid Grid.Row="1"
                             Margin="0,8,0,8"
                             AutoGenerateColumns="False"
                             ItemsSource="{Binding Constraints}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Width="800"
                             Height="300">
                    <ui:DataGrid.Columns>
                        <DataGridTextColumn Header="Constraint" Binding="{Binding Constraint.FullName}"/>
                        <DataGridTextColumn Header="Result" Binding="{Binding Result.ResultType}"/>
                        <DataGridTextColumn Header="Message" Binding="{Binding Result.Message}" Width="*"/>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button Content="Run Check"
                               Appearance="Primary"
                               Margin="0,0,0,0"
                               Padding="12,8"
                               Command="{Binding EvaluateCommand}"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</ui:FluentWindow>
